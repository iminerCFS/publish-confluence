#!/bin/sh -l

# install requirements.txt if it exists
if [ -f requirements.txt ]; then
  pip install --user -r requirements.txt
fi

if ! [ -z "$INPUT_DOCSDIR" ]; then
  cd $INPUT_DOCSDIR
fi

sphinx-build -b confluence -D confluence_server_user=$INPUT_USERNAME -D confluence_server_pass=$INPUT_APITOKEN . _build/confluence -E -a 
  
